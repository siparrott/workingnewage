# Production environment example for Heroku/GitHub
# Copy to .env for local dev. On Heroku, set these as Config Vars.

# Core
NODE_ENV=production
# Heroku provides PORT automatically
# PORT=3001
APP_URL=https://your-app.herokuapp.com
APP_BASE_URL=

# Database
DATABASE_URL=postgres://user:pass@host:5432/dbname

# Admin and sessions
ADMIN_TOKEN=change-me-strong-admin-token
SECRET_ADMIN_TOKEN=
SESSION_SECRET=change-me-random-string
# Enable to log backend login attempts (to stdout / Heroku logs)
# Accepts: true/false or 1/0
AUTH_LOG=false

# Payments (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
VITE_STRIPE_PUBLIC_KEY=

# Email (optional; if not set, JSON transport is used and emails print to logs)
EMAIL_TRANSPORT=json
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=no-reply@example.com
STUDIO_NOTIFY_EMAIL=

# Voucher/Downloads
VOUCHER_LOGO_URL=
DOWNLOAD_TOKEN_SECRET=

# Coupons (optional)
COUPONS_JSON=
# Comma-separated list of coupon codes restricted to â‚¬95 voucher items
COUPONS_95_ONLY=VCWIEN,CL50,WL50,VW50

# Messaging providers (optional)
# Vonage
VONAGE_APPLICATION_ID=
VONAGE_PRIVATE_KEY=
VONAGE_WHATSAPP_FROM=
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_SMS_FROM=
# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# AI (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Calendar import (optional for scripts)
ICS_URL=
BASE_URL=
